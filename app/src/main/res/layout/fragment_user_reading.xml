<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ProgressBar to show while content is loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <!-- TextView for displaying the chapter content with a larger font -->
    <TextView
        android:id="@+id/tvChapterContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chapter Content will appear here"
        android:textSize="18sp"
        android:lineSpacingExtra="4dp"
        android:textColor="@android:color/black"/>

    <!-- Label for comments -->
    <TextView
        android:id="@+id/tvCommentsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <!-- RecyclerView for displaying comments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
